<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Enviado <%= time_ago_in_words(@post.created_at) %> Ago
		| <%= link_to 'Editar', edit_post_path(@post) %>
		| <%= link_to 'Eliminar', post_path(@post), method: :delete, data: { confirm: 'Esta Seguro de borra este articulo?' } %>
	</p>

	<p class="body">
		<%= @post.body %>
	</p>
</div>